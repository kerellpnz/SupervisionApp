<Window x:Class="Supervision.Views.EntityViews.DetailViews.WeldGateValve.WeldGateValveCoverEditView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:wpfx="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit/extended"
        mc:Ignorable="d"
      Style="{StaticResource StandardWindow}"
      d:DesignHeight="1000" d:DesignWidth="1400"
        WindowStartupLocation="CenterScreen"
        Title="Редактирование крышки ЗШ">
    <Window.Resources>
        <CollectionViewSource x:Key="Inspectors" Source="{Binding Inspectors}"/>
        <CollectionViewSource x:Key="Points" Source="{Binding Points}" />
        <CollectionViewSource x:Key="JournalNumbers" Source="{Binding JournalNumbers}"/>
    </Window.Resources>

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Label Style="{StaticResource StandardLabel}" 
                   FontSize="{StaticResource Hi}"
                   Content="Характеристики" 
                   VerticalAlignment="Center"/>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <TextBlock Style="{StaticResource StandardTextBlock}" 
                               Text="Номер:" 
                               Margin="5 0 5 0" 
                               VerticalAlignment="Center"/>
                    
                    <TextBlock Style="{StaticResource StandardTextBlock}" 
                               Grid.Row="2" 
                               Text="PN:" 
                               Margin="5 0 5 0" 
                               VerticalAlignment="Center"/>


                    <TextBlock Style="{StaticResource StandardTextBlock}" 
                               Grid.Row="1"
                               Text="DN:" 
                               Margin="5 0 5 0" 
                               VerticalAlignment="Center"/>
                    
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <TextBox Style="{StaticResource StandardTextBox}" 
                             Width="auto" 
                             Margin="5 0 5 0" 
                             VerticalAlignment="Center"
                             Text="{Binding SelectedItem.Number, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>

                    <ComboBox Style="{StaticResource StandardComboBox}" 
                              Grid.Row="1" 
                              Width="auto" 
                              Margin="5 0 5 0" 
                              IsEditable="True" 
                              VerticalAlignment="Center"
                              ItemsSource="{Binding DNs}" 
                              SelectedItem= "{Binding SelectedItem.DN}"  />

                    <ComboBox Style="{StaticResource StandardComboBox}" 
                              Grid.Row="2" 
                              Width="auto" 
                              Margin="5 0 5 0" 
                              IsEditable="True" 
                              VerticalAlignment="Center"
                              ItemsSource="{Binding PNs}" 
                              SelectedItem= "{Binding SelectedItem.PN}"  />

                </Grid>

                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>

                    <!--<TextBlock Style="{StaticResource StandardTextBlock}" 
                               Text="Материал:" 
                               Margin="5 0 5 0" 
                               VerticalAlignment="Center"/> -->

                    <TextBlock Style="{StaticResource StandardTextBlock}" 
                               Grid.Row="0" 
                               Text="Плавка:" 
                               Margin="5 0 5 0" 
                               VerticalAlignment="Center"/>

                    <TextBlock Style="{StaticResource StandardTextBlock}" 
                               Grid.Row="1" 
                               Text="Чертеж:" 
                               Margin="5 0 5 0" 
                               VerticalAlignment="Center"/>

                    <TextBlock Style="{StaticResource StandardTextBlock}" 
                               Grid.Row="2" 
                               Text="PID:" 
                               Margin="5 0 5 0" 
                               VerticalAlignment="Center"/>


                </Grid>

                <Grid Grid.Column="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <!-- <TextBox Style="{StaticResource StandardTextBox}" 
                              Grid.Row="0" 
                              Width="auto" 
                              Margin="5 0 5 0" 
                              VerticalAlignment="Center" 
                              Text="{Binding SelectedItem.Material, UpdateSourceTrigger=PropertyChanged}">
                    </TextBox> -->

                    <TextBox Style="{StaticResource StandardTextBox}" 
                              Grid.Row="0" 
                              Width="auto" 
                              Margin="5 0 5 0" 
                              VerticalAlignment="Center" 
                              Text="{Binding SelectedItem.Melt, UpdateSourceTrigger=PropertyChanged}">
                    </TextBox>

                    <ComboBox Style="{StaticResource StandardComboBox}" 
                              Grid.Row="1" 
                              Width="auto" 
                              Margin="5 0 5 0" 
                              IsEditable="True" 
                              VerticalAlignment="Center" 
                              Text="{Binding SelectedItem.Drawing, UpdateSourceTrigger=PropertyChanged}" 
                              ItemsSource="{Binding Drawings}" 
                              SelectedItem= "{Binding SelectedItem.Drawing}"/>

                    <ComboBox x:Name="PIDBox" Style="{StaticResource StandardComboBox}" 
                              IsTextSearchEnabled="False"
                              KeyUp="PIDBox_KeyUp"
                              Grid.Row="2" 
                              Width="auto"
                              Margin="5 0 5 0" 
                              IsEditable="True" 
                              VerticalAlignment="Center" 
                              ItemsSource="{Binding PIDs}" 
                              SelectedItem= "{Binding SelectedItem.PID}"
                              SelectedValuePath="Id"
                              SelectedValue="{Binding SelectedItem.PIDId}"
                              DisplayMemberPath="Number"/>

                </Grid>

                <Grid Grid.Column="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>

                    <TextBlock Style="{StaticResource StandardTextBlock}" 
                               Grid.Row="0" 
                               Text="Сертификат:" 
                               Margin="5 0 5 0" 
                               VerticalAlignment="Center"/>

                    <TextBlock Style="{StaticResource StandardTextBlock}" 
                               Grid.Row="1" 
                               Text="Статус:" 
                               Margin="5 0 5 0" 
                               VerticalAlignment="Center"/>

                    

                    <Button Style="{StaticResource StandardButton}"                            
                             Grid.Row="2" 
                            Height="30"
                            Margin="5 0 5 0"
                            Content="Открыть"
                            Command="{Binding EditPIDCommand}"/>
                </Grid>

                <Grid Grid.Column="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <TextBox Style="{StaticResource StandardTextBox}" 
                              Grid.Row="0" 
                              Width="auto" 
                              Margin="5 0 5 0" 
                              VerticalAlignment="Center" 
                              Text="{Binding SelectedItem.Certificate, UpdateSourceTrigger=PropertyChanged}">
                    </TextBox>

                    <TextBlock Grid.Row="1" 
                              Width="auto" 
                              Margin="5 0 5 0" 
                              VerticalAlignment="Center" 
                              Text="{Binding SelectedItem.Status, UpdateSourceTrigger=PropertyChanged}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource StandardTextBlock}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedItem.Status}" Value="НЕ СООТВ.">
                                        <Setter Property="Foreground" Value="Red" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    
                </Grid>

                <Separator Grid.Column="6">
                    <Separator.Style>
                        <Style TargetType="Separator" BasedOn="{StaticResource VerticalSeparator}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedItem.BaseWeldValve}"
                                             Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Separator.Style>
                </Separator>

                <Grid Grid.Column="7">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock
                            IsEnabled="{Binding ElementName=Number, Path=Text}"
                            Width="auto" 
                            Margin="5 0 5 5" 
                            VerticalAlignment="Center"
                            Text="В сборке:">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource StandardTextBlock}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedItem.BaseWeldValve}"
                                                     Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed">
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Style="{StaticResource StandardTextBlock}"
                                   Margin="5 0 5 0" 
                                   Text="{Binding SelectedItem.BaseWeldValve.Name}"></TextBlock>
                        <TextBlock Name="Number"
                               Width="auto" 
                               Margin="5 5 5 0" 
                               VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource StandardTextBlock}"/>
                            </TextBlock.Style>
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}№ {0}">
                                    <Binding Path="SelectedItem.BaseWeldValve.Number"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>

        <Separator Style="{StaticResource HorizontalSeparator}" 
                   Grid.Row="1"/>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Style="{StaticResource StandardLabel}" 
                   FontSize="{StaticResource Hi}"
                   Content="Фланец:" 
                   VerticalAlignment="Center"/>

            <ComboBox x:Name="FlangesBox" Style="{StaticResource StandardComboBox}" 
                      IsTextSearchEnabled="False"
                              KeyUp="FlangesBox_KeyUp"     
                      Grid.Column="1"
                      Width="auto" 
                      Margin="5 0 5 0" 
                      IsEditable="True" 
                      VerticalAlignment="Center" 
                      ItemsSource="{Binding CoverFlanges}" 
                      SelectedItem= "{Binding SelectedItem.CoverFlange}"
                      SelectedValuePath="Id"
                      SelectedValue="{Binding SelectedItem.CoverFlangeId}"
                      DisplayMemberPath="FullName"/>

            <Button Style="{StaticResource StandardButton}"
                        Grid.Column="2"
                        Height="30"
                        Margin="5 0 5 0"
                        Content="Открыть"
                        Command="{Binding EditCoverFlangeCommand}"/>

            <Label Style="{StaticResource StandardLabel}" 
                   FontSize="{StaticResource Hi}"
                   Content="Втулка центральная:" 
                   VerticalAlignment="Center"
                   Grid.Row="0"
                   Grid.Column="4"/>

            <ComboBox x:Name="SleevesBox" Style="{StaticResource StandardComboBox}" 
                      IsTextSearchEnabled="False"
                              KeyUp="SleevesBox_KeyUp"  
                      Grid.Column="5"
                      Width="auto" 
                      Margin="5 0 5 0" 
                      IsEditable="True" 
                      VerticalAlignment="Center" 
                      ItemsSource="{Binding CoverSleeves}" 
                      SelectedItem= "{Binding SelectedItem.CoverSleeve}"
                      SelectedValuePath="Id"
                      SelectedValue="{Binding SelectedItem.CoverSleeveId}"
                      DisplayMemberPath="FullName"
                      Grid.Row="0"/>

            <Button Style="{StaticResource StandardButton}"
                    Grid.Column="6"
                    Grid.Row="0"
                    Height="30"
                    Margin="5 0 5 0"
                    Content="Открыть"
                    Command="{Binding EditCoverSleeveCommand}"/>

            <Label Style="{StaticResource StandardLabel}" 
                   FontSize="{StaticResource Hi}"
                   Grid.Column="8"
                   Content="Шпиндель:" 
                   VerticalAlignment="Center"/>

            <ComboBox x:Name="SpindlesBox" Style="{StaticResource StandardComboBox}" 
                     IsTextSearchEnabled="False"
                              KeyUp="SpindlesBox_KeyUp"  
                      Grid.Column="9"
                      Width="auto" 
                      Margin="5 0 5 0" 
                      IsEditable="True" 
                      VerticalAlignment="Center" 
                      ItemsSource="{Binding Spindles}" 
                      SelectedItem= "{Binding SelectedItem.Spindle}"
                      SelectedValuePath="Id"
                      SelectedValue="{Binding SelectedItem.SpindleId}"
                      DisplayMemberPath="FullName"/>

            <Button Style="{StaticResource StandardButton}"
                        Grid.Column="10"
                        Height="30"
                        Margin="5 0 5 0"
                        Content="Открыть"
                        Command="{Binding EditSpindleCommand}"/>

            <Label Style="{StaticResource StandardLabel}" 
                   FontSize="{StaticResource Hi}"
                   Content="Стойка:" 
                   VerticalAlignment="Center"
                   Grid.Row="1"
                   Grid.Column="8"/>

            <ComboBox x:Name="ColumnsBox" Style="{StaticResource StandardComboBox}" 
                      IsTextSearchEnabled="False"
                              KeyUp="ColumnsBox_KeyUp"
                      Grid.Column="9"
                      Grid.Row="1"
                      Width="auto" 
                      Margin="5 0 5 0" 
                      IsEditable="True" 
                      VerticalAlignment="Center" 
                      ItemsSource="{Binding Columns}" 
                      SelectedItem= "{Binding SelectedItem.Column}"
                      SelectedValuePath="Id"
                      SelectedValue="{Binding SelectedItem.ColumnId}"
                      DisplayMemberPath="FullName"/>

            <Button Style="{StaticResource StandardButton}"
                    Grid.Column="10"
                    Grid.Row="1"
                    Height="30"
                    Margin="5 0 5 0"
                    Content="Открыть"
                    Command="{Binding EditColumnCommand}"/>

            <Label Style="{StaticResource StandardLabel}" 
                   FontSize="{StaticResource Hi}"
                   Content="Днище:" 
                   VerticalAlignment="Center"
                   Grid.Row="1"
                   Grid.Column="0"/>

            <ComboBox x:Name="BottomsBox" Style="{StaticResource StandardComboBox}" 
                       IsTextSearchEnabled="False"
                              KeyUp="BottomsBox_KeyUp"      
                      Grid.Row="1"
                   Grid.Column="1"
                      Width="auto" 
                      Margin="5 0 5 0" 
                      IsEditable="True" 
                      VerticalAlignment="Center" 
                      ItemsSource="{Binding CaseBottoms}" 
                              SelectedItem= "{Binding SelectedItem.CaseBottom}"
                              SelectedValuePath="Id"
                              SelectedValue="{Binding SelectedItem.CaseBottomId}"
                              DisplayMemberPath="FullName"/>

            <Button Style="{StaticResource StandardButton}"
                            Grid.Column="2"
                            Grid.Row="1"
                            Height="30"
                            Margin="5 0 5 0"
                            Content="Открыть"
                            Command="{Binding EditCaseBottomCommand}"/>

            <Label Style="{StaticResource StandardLabel}" 
                   FontSize="{StaticResource Hi}"
                   Grid.Column="0"
                   Grid.Row="2"
                   Margin="0 5 0 0"
                   Content="Прокат:" 
                   VerticalAlignment="Top"/>

            <ComboBox x:Name="MetalsBox" Style="{StaticResource StandardComboBox}" 
                      IsTextSearchEnabled="False"
                              KeyUp="MetalsBox_KeyUp"  
                      Grid.Column="1"
                      Grid.Row="2"
                      Width="auto"
                      Margin="5 10 5 0" 
                      IsEditable="True" 
                      VerticalAlignment="Top" 
                      ItemsSource="{Binding MetalMaterials}" 
                      SelectedItem= "{Binding SelectedItem.MetalMaterial}"
                      SelectedValuePath="Id"
                      SelectedValue="{Binding SelectedItem.MetalMaterialId}"                      
                      DisplayMemberPath="FullName"/>

            <Button Style="{StaticResource StandardButton}"
                        Grid.Column="2"
                    VerticalAlignment="Top"
                        Grid.Row="2"
                        Height="30"
                        Margin="5 5 5 0"
                        Content="Открыть"
                        Command="{Binding EditMaterialCommand}"/>

            <Label Style="{StaticResource StandardLabel}"
                           FontSize="{StaticResource Hi}"
                           Grid.Row="2"
                            Grid.Column="8"
                           Content="Графлекс/РТИ:"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
            <ComboBox x:Name="AssemblyUnitSealsBox" Style="{StaticResource StandardComboBox}" 
                      IsTextSearchEnabled="False"
                              KeyUp="AssemblyUnitSealsBox_KeyUp"        
                      Grid.Row="2"
                              Grid.Column="9"
                              Margin="5 0 5 0"
                              IsEditable="True"
                              VerticalAlignment="Center" 
                              ItemsSource="{Binding Seals}"
                              SelectedItem="{Binding SelectedSeal}"
                              DisplayMemberPath="FullName"
                              SelectedValuePath="Id"/>
            <ListBox  Style="{StaticResource StandardListBox}"
                              ItemsSource="{Binding SelectedItem.BaseValveSCoverWithSeals}" 
                              Margin="5"
                                Grid.Column="8"
                              Height="auto"
                                      MinHeight="80"
                                      MaxHeight="180"
                                      VerticalAlignment="Top"
                                      VerticalContentAlignment="Top"
                              ScrollViewer.CanContentScroll="True"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              Grid.ColumnSpan="2"
                              Grid.Row="3"
                              Grid.RowSpan="2"
                              SelectedItem="{Binding SelectedSealFromList}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDoubleClick">
                        <i:InvokeCommandAction Command="{Binding EditSealCommand}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0}">
                                    <Binding Path="FullName"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Orientation="Vertical" Grid.Row="3" Grid.Column="10" VerticalAlignment="Top">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Button Style="{StaticResource StandardButton}"
                            Grid.Row="0"
                            Grid.Column="2"
                            Height="30"
                            Margin="5"
                            Content="Открыть"
                            Command="{Binding EditSealCommand}"/>

                    <Button Style="{StaticResource StandardButton}"
                            Grid.Row="1"
                            Grid.Column="2"
                            Margin="5"
                            Height="30"
                            Content="Удалить"
                            Command="{Binding DeleteSealFromValveCommand}"/>
                </Grid>
            </StackPanel>

            <Button Style="{StaticResource StandardButton}" 
                            Grid.Row="2"
                            Grid.Column="10"
                            Margin="5"
                            Height="30"
                            Content="Добавить"
                            Command="{Binding AddSealToValveCommand}"/>


            <Label Style="{StaticResource StandardLabel}" 
                   FontSize="{StaticResource Hi}"
                   Content="Втулка дренажная:" 
                   VerticalAlignment="Center"
                   Grid.Row="1"
                   Grid.Column="4"/>

            <ComboBox x:Name="Sleeves008Box" Style="{StaticResource StandardComboBox}" 
                      IsTextSearchEnabled="False"
                              KeyUp="Sleeves008Box_KeyUp"  
                      Grid.Column="5"
                      Grid.Row="1"
                      Width="auto" 
                      Margin="5 0 5 0" 
                      IsEditable="True" 
                      VerticalAlignment="Center" 
                      ItemsSource="{Binding CoverSleeves008}" 
                      SelectedItem= "{Binding SelectedItem.CoverSleeve008}"
                      SelectedValuePath="Id"
                      SelectedValue="{Binding SelectedItem.CoverSleeve008Id}"
                      DisplayMemberPath="FullName"/>

            <Button Style="{StaticResource StandardButton}"
                    Grid.Column="6"
                    Grid.Row="1"
                    Height="30"
                    Margin="5 0 5 0"
                    Content="Открыть"
                    Command="{Binding EditCoverSleeve008Command}"/>

            <Label Style="{StaticResource StandardLabel}"
                                FontSize="{StaticResource Hi}"
                                Grid.Row="2"
                                Grid.Column="4"
                                Content="Кран (дренажный):"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"/>

            <TextBox Style="{StaticResource StandardTextBox}" 
                                Grid.Row="2"
                                Grid.Column="5"
                                Width="auto" 
                                Margin="5 0 5 0" 
                                VerticalAlignment="Center"
                                Text="{Binding SelectedItem.BallValveDrainage, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>

            <Label Style="{StaticResource StandardLabel}"
                                FontSize="{StaticResource Hi}"
                                Grid.Row="3"
                                Grid.Column="4"
                                Margin="0 5 0 0"
                                Content="Кран (спускной):"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"/>

            <TextBox Style="{StaticResource StandardTextBox}" 
                                Grid.Row="3"
                                Grid.Column="5"
                                Width="auto" 
                                Margin="5 12 5 0" 
                                VerticalAlignment="Top"
                                Text="{Binding SelectedItem.BallValveDraining, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>


        </Grid>

        <Separator Style="{StaticResource HorizontalSeparator}" 
                       Grid.Row="3"/>

        <TabControl Style="{StaticResource StandardTabControl}"
                        Grid.Row="4"
                        Grid.RowSpan="2">
            <TabItem Header="Входной">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <DataGrid Style="{StaticResource StandardDataGrid}"
                              Grid.Column="0" 
                              MinRowHeight="50"
                              ItemsSource="{Binding InputControlJournal}"
                              SelectedItem="{Binding Operation}"
                              IsReadOnly="False"
                              HorizontalScrollBarVisibility="Visible">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Дата"
                                MinWidth="100"
                                Width="auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <DatePicker Style="{StaticResource StandardDatepicker}" VerticalAlignment="Stretch" 
                                            SelectedDate="{Binding Path = Date, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn 
                                Header="Пункт"
                                MinWidth="50"
                                Width="auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Path=Point}"
                                           FontSize="{StaticResource Hi}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Операция" 
                                    Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding Path = Description, UpdateSourceTrigger=PropertyChanged}"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     
                                     VerticalAlignment="Center"
                                     MinLines="3"
                                     MaxLines="50"
                                     SpellCheck.IsEnabled="True"
                                     Language="ru-ru"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn
                                        Header="Место контроля" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox 
                                      IsEditable="True"
                                      ItemsSource="{Binding PlaceOfControlView}"
                                      SelectedItem="{Binding PlaceOfControl}"
                                      Text="{Binding Path=PlaceOfControl, UpdateSourceTrigger=PropertyChanged}" >
                                            <!--SelectedValue= "{Binding Path=Documents, UpdateSourceTrigger=PropertyChanged}" >-->
                                        </ComboBox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn
                                        Header="Предъявленные&#x0a;    документы" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox 
                                      IsEditable="True"
                                      ItemsSource="{Binding DocumentsView}"
                                      SelectedItem="{Binding Documents}"
                                      Text="{Binding Path=Documents, UpdateSourceTrigger=PropertyChanged}" >
                                            <!--SelectedValue= "{Binding Path=Documents, UpdateSourceTrigger=PropertyChanged}" >-->
                                        </ComboBox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn 
                                            Header="Инженер"
                                            MinWidth="120"
                                            Width="auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox  VerticalContentAlignment="Center"
                                       IsEditable="True"
                                       ItemsSource="{Binding Path=DataContext.Inspectors, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                                       SelectedItem= "{Binding Path=Inspector, UpdateSourceTrigger=PropertyChanged}"
                                       SelectedValuePath="Id"
                                       SelectedValue="{Binding Path=InspectorId, UpdateSourceTrigger=PropertyChanged}"
                                       DisplayMemberPath="FullName">
                                        </ComboBox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn
                                        Header="Статус" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock   
                                 VerticalAlignment="Center"
                                 Margin="5"
                                 Text="{Binding Path=Status, UpdateSourceTrigger=PropertyChanged}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Замечание&#x0a;   выдано"
                                        Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock   
                                        VerticalAlignment="Center"
                                         Text="Замечание №">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding RemarkIssued}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Hidden"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding RemarkIssued}" Value="">
                                                                <Setter Property="Visibility" Value="Hidden"/>
