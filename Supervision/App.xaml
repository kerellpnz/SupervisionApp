<Application x:Class="Supervision.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:Supervision.ViewModels.EntityViewModels.DetailViewModels.Valve"
             xmlns:views="clr-namespace:Supervision.Views.EntityViews.DetailViews.Valve"
             StartupUri="Views\MainWindow.xaml"
             ShutdownMode="OnMainWindowClose">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles\Colors.xaml" />
                <ResourceDictionary Source="Styles\Fonts.xaml" />
                <ResourceDictionary Source="Styles\Icons.xaml" />

                <ResourceDictionary Source="Styles\Defaults.xaml" />
                <ResourceDictionary Source="Styles\Texts.xaml" />
                <ResourceDictionary Source="Styles\Buttons.xaml" />
                <ResourceDictionary Source="Styles\ContentControls.xaml" />
                <ResourceDictionary Source="Styles\UserControl.xaml" />
                <ResourceDictionary Source="Styles\DataGrids.xaml" />
                <ResourceDictionary Source="Styles\Menu.xaml" />
                <ResourceDictionary Source="Styles\Comboboxes.xaml" />
                <ResourceDictionary Source="Styles\ListBoxes.xaml"/>
                <ResourceDictionary Source="Styles\UserControl.xaml"/>
                <ResourceDictionary Source="Styles\Separators.xaml"/>
                <ResourceDictionary Source="Styles\ProjectStyles\ComboBoxStyles.xaml"/>
                <ResourceDictionary Source="Styles/ProjectStyles/MetroWindowResources.xaml"/>
                <ResourceDictionary Source="Styles/ProjectStyles/Resources.xaml"/>
                <ResourceDictionary Source="Styles/ProjectStyles/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewmodels:SaddleEditVM}">
                <views:SaddleEditView/>
            </DataTemplate>

           
            

        </ResourceDictionary>
        
    </Application.Resources>
</Application>
